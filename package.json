{
  "name": "maybecode",
  "version": "1.0.0",
  "description": "A powerful, customizable, and modern code editor with syntax highlighting",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
	"dist": "electron-builder"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.7.6",
    "@codemirror/commands": "^6.2.6",
    "@codemirror/lang-cpp": "^6.0.2",
    "@codemirror/lang-html": "^6.1.7",
    "@codemirror/lang-java": "^6.0.1",
    "@codemirror/lang-javascript": "^6.1.9",
    "@codemirror/lang-python": "^6.1.2",
    "@codemirror/language": "^6.9.0",
    "@codemirror/lint": "^6.4.1",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.23.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.maybecode.editor",
    "productName": "MaybeCode 3.0(beta)",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "icon.png",
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "icon": "icon.icns",
      "target": "dmg"
    }
  },
  "keywords": [
    "code-editor",
    "electron",
    "javascript",
    "python",
    "html",
    "cpp",
    "java"
  ],
  "author": "Andrew Agouridis",
  "license": "MIT"
}
